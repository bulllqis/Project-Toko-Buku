<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/teal_200">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="#00000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:text="Detail"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_buku"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/header"/>
    <TextView
        android:id="@+id/tv_namaBuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_buku"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_penulis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_namaBuku"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_penulis"
        android:text="Rp."
        android:layout_toLeftOf="@id/tv_harga"
        android:textAlignment="textEnd"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_penulis"
        android:text="hsghdg"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_harga"
        android:text="Deskripsi"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deskripsi"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Buku"
        android:layout_below="@id/tv_deskripsi"
        android:textSize="15sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/halaman"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/purple_200">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Halaman"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_jumlahHalaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="645"
                android:textSize="15sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/penerbit"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/purple_200"
            android:layout_toRightOf="@id/halaman"
            android:layout_marginLeft="10dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penerbit"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_penerbit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gramedia"
                    android:textSize="15sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tanggalTerbit"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/purple_200"
            android:layout_below="@id/halaman"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Terbit"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_tglTerbit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Januari 2022"
                    android:textSize="15sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/isbn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/purple_200"
            android:layout_toRightOf="@id/tanggalTerbit"
            android:layout_below="@id/penerbit"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ISBN"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_isbn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="64736473878738"
                    android:textSize="15sp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Order"/>


</RelativeLayout>