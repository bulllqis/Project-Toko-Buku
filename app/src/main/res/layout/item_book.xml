<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    android:layout_marginVertical="10dp"
    android:backgroundTint="@color/teal_700">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBuku"
            android:layout_width="90dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:id="@+id/iv_buku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_namaBuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardBuku"
            android:text="Nama"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            />


        <TextView
            android:id="@+id/tv_penulis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penulis"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/cardBuku"
            android:layout_below="@id/tv_namaBuku"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"

            />
        <TextView
            android:id="@+id/Rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_penulis"
            android:text="Rp."
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cardBuku"

            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_penulis"
            android:text="22000"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/Rp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/white"
           />
    </RelativeLayout>
</androidx.cardview.widget.CardView>